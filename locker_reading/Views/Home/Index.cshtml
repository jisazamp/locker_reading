        </div>
    </div>

    <!-- JavaScript Libraries -->
    <script src="~/Pratt/lib/jquery/jquery.min.js"></script>
    <script src="~/Pratt/lib/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Pratt/lib/php-mail-form/validate.js"></script>
    <script src="~/Pratt/lib/easing/easing.min.js"></script>

    <!-- Template Main Javascript File -->
    <script src="~/Pratt/js/main.js"></script>

</body>
</html>
